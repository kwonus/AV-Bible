<Window x:Class="AVBible.ResultsWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
<!-- 
  SEE: https://learn.microsoft.com/en-us/dotnet/desktop/wpf/advanced/table-overview?view=netframeworkdesktop-4.8&viewFallbackFrom=netdesktop-8.0
  Table is a Block element, and as such must be hosted in a container
  for Block elements.  FlowDocument provides such a container. 
-->
    <FlowDocument Name="ResultsFlowDoc" Background="Gray">
        <Table Name="ResultsFlowTable" BorderThickness="1" Background="Gray" FontFamily="Calibri">
            <!-- Colum definitions will go in here. -->
            <!-- <Table.Columns/> -->
            
            <!-- This TableRowGroup hosts all records for the table. -->
            <!-- <TableRowGroup/> -->
        </Table>
    </FlowDocument>
</Window>
